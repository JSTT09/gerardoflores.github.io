<style>
  /* Professional CV Style */
  :root {
    --text-primary: #333333;
    --text-secondary: #666666;
    --border-color: #CCCCCC;
    --section-spacing: 1.5rem;
  }

  main {
    font-family: 'Times New Roman', Times, serif;
    line-height: 1.5;
    color: var(--text-primary);
    background-color: white;
    max-width: 8.5in; /* Standard US Letter width */
    margin: 0 auto;
    padding: 1in; /* 1-inch margins */
  }

  /* Typography */
  h1, h2, h3 {
    font-family: 'Times New Roman', Times, serif;
    color: var(--text-primary);
    margin: 0;
    page-break-after: avoid;
  }

  h1 {
    font-size: 18pt;
    margin-bottom: 0.5rem;
    text-align: center;
  }

  h2 {
    font-size: 14pt;
    font-weight: bold;
    margin-bottom: 0.75rem;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.25rem;
    text-transform: uppercase;
  }

  h3 {
    font-size: 12pt;
    font-weight: bold;
  }

  /* Sections */
  section {
    margin-bottom: var(--section-spacing);
    page-break-inside: avoid;
  }

  /* Header */
  .cv-header {
    text-align: center;
    margin-bottom: var(--section-spacing);
  }

  .cv-header p {
    color: var(--text-secondary);
    font-size: 11pt;
    line-height: 1.4;
  }

  /* Content */
  p, li {
    font-size: 11pt;
    margin: 0;
    line-height: 1.4;
  }

  ul {
    margin: 0.5rem 0;
    padding-left: 1.25rem;
  }

  ul li {
    margin-bottom: 0.25rem;
    list-style-type: disc;
  }

  /* Layout */
  .flex {
    display: flex;
    align-items: baseline;
  }

  .justify-between {
    justify-content: space-between;
  }

  .grid {
    display: grid;
    gap: 1rem;
  }

  .grid-cols-2 {
    grid-template-columns: repeat(2, 1fr);
  }

  /* Profile Image */
  .profile-image-container {
    width: 150px;
    height: 150px;
    margin: 0 auto 1rem auto;
  }

  .profile-image-placeholder {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
  }

  .profile-image-placeholder img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Print Styles */
  @media print {
    main {
      margin: 0;
      padding: 1in;
    }

    section {
      page-break-inside: avoid;
    }

    a {
      text-decoration: none;
      color: var(--text-primary);
    }
  }

  /* Dates and Location */
  .text-gray-600 {
    color: var(--text-secondary);
    font-size: 11pt;
  }
  }

  .grid-cols-2 {
    grid-template-columns: repeat(2, 1fr);
  }

  @media print {
    main {
      padding: 0;
      max-width: none;
    }

    section {
      page-break-inside: avoid;
      box-shadow: none;
    }

    h2::after {
      print-color-adjust: exact;
      -webkit-print-color-adjust: exact;
    }

    .cv-header {
      text-align: center;
    }
  }

  /* Hover effects */
  section:hover {
    box-shadow: 0 4px 8px rgba(165, 28, 48, 0.1);
    transition: box-shadow 0.3s ease;
  }

  /* Links styling */
  a {
    color: var(--harvard-crimson);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s ease;
  }

  a:hover {
    border-bottom-color: var(--harvard-crimson);
  }

  /* Container */
  .container {
    width: 100%;
    max-width: 66rem;
    margin: 0 auto;
    padding: 2rem;
  }

  /* Profile Image Styles */
  .profile-image-container {
    width: 200px;
    height: 200px;
  }

  .profile-image-placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--harvard-light-gray);
    border: 2px solid var(--harvard-crimson);
    border-radius: 4px;
    overflow: hidden;
  }

  .profile-image-placeholder img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
